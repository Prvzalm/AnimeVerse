# Environment Variables Example for AnimeVerse

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/animeverse

# Redis
REDIS_URL=redis://:password@localhost:6379

# OpenAI
OPENAI_API_KEY=

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PRICE_ID=

# NextAuth
NEXTAUTH_SECRET=change_me
NEXTAUTH_URL=http://localhost:3000

# OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# JWT (optional for getToken)
NEXTAUTH_JWT_SECRET=

# Jikan / AniList
ANIME_API=JIKAN

# Environment mode (development or production)
NODE_ENV=development

# Port for the application
PORT=3000